#ifndef INC_APPSDCYCLICWRITE_H_
#define INC_APPSDCYCLICWRITE_H_

#ifdef __cplusplus
extern "C" {
#endif

#include "app_fatfs.h"
#include "main.h"
#include "stdio.h"
#include "string.h"

#define SDCYCLIC_BUFFER_SIZE   8192  // 8 KB buffer
#define SDCYCLIC_TEMP_SIZE      256  // chunk para escrita

typedef struct {
    char buffer[SDCYCLIC_BUFFER_SIZE];
    volatile uint16_t head;
    volatile uint16_t tail;
    volatile uint16_t lineCount;
    FIL file;
    uint8_t mounted;
} SDCyclic_t;

// === Funções principais ===
void SDCyclicOpen(SDCyclic_t *sd, const char *filename);
void SDCyclicAddLine(SDCyclic_t *sd, const char *line);
void SDCyclicFlush(SDCyclic_t *sd);
void SDCyclicClose(SDCyclic_t *sd);

#ifdef __cplusplus
}
#endif


#endif /* INC_APPSDCYCLICWRITE_H_ */
